<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/light_green">

        <TextView
            android:layout_width="381dp"
            android:layout_height="71dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext"
            android:backgroundTint="@color/purple"
            android:text="Form"
            android:padding="12dp"
            android:textFontWeight="750"
            android:textAlignment="center"
            android:textSize="32dp" />


        <TextView
            android:id="@+id/TextViewDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Date :"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date"
            android:textSize="18dp"
            android:inputType="text|date"
            android:layout_marginBottom="8dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/TextViewTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Time :"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Time"
            android:textSize="18dp"
            android:inputType="time"
            android:layout_marginBottom="8dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/TextViewFacultyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Faculty Name :"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/editTextFacultyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Faculty Name"
            android:textSize="18dp"
            android:inputType="textPersonName"
            android:layout_marginBottom="8dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/TextViewBranch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Branch :"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/editTextBranch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Branch"
            android:textSize="18dp"
            android:inputType="textPersonName"
            android:layout_marginBottom="8dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/TextViewSemester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Semester :"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/editTextSemester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Semester"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginBottom="8dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/TextViewSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Subject :"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/editTextSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subject"
            android:textSize="18dp"
            android:inputType="textShortMessage"
            android:layout_marginBottom="8dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/TextViewClassEngagedOf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Class Enagaged Of :"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/editTextClassEngagedOf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Class engaged of"
            android:textSize="18dp"
            android:inputType="textPersonName"
            android:layout_marginBottom="8dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/TextViewTopics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Topics Covered :"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/editTextTopics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Topics covered"
            android:textSize="18dp"
            android:inputType="textMultiLine"
            android:layout_marginBottom="8dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/TextViewAttendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Attendance :"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/editTextAttendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Attendance"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginBottom="8dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/TextViewRemarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Remarks :"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/editTextRemarks"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_marginBottom="8dp"
            android:hint="Remarks"
            android:inputType="textMultiLine"
            android:textSize="18dp"
            android:background="@color/white"/>

            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/edittext"
                android:backgroundTint="@color/purple"
                android:padding="12dp"
                android:text="Submit"
                android:textAlignment="center"
                android:textSize="23sp"
                android:textStyle="bold" />

    </LinearLayout>
</ScrollView>